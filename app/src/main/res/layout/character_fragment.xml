<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorCharBG">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

        <FrameLayout
            android:layout_width="150dp"
            android:layout_height="150dp">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/matt"/>

            <TextView
                android:id="@+id/figure"
                android:textSize="100sp"
                android:textColor="#000"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:gravity="center"/>
        </FrameLayout>

        <LinearLayout
            android:layout_height="150dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="110dp">

                <ImageView
                    android:id="@+id/char_image"
                    android:layout_width="wrap_content"
                    android:layout_height="110dp"
                    android:layout_gravity="center"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/media_pronunciation"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/horn"/>

                <TextView
                    android:id="@+id/pinyin"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:textSize="25sp"/>

                <Button
                    android:id="@+id/mark"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="end"
                    android:background="@drawable/star"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="35dp">
    </View>

    <TableLayout
        android:background="@drawable/block"
        android:padding="5dp"
        android:stretchColumns="1"
        android:shrinkColumns="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>
            <TextView
                style="@style/TestText"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Radical:"/>

            <TextView
                style="@style/TestText"
                android:id="@+id/radical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
        </TableRow>

        <View android:layout_height="2dp" android:background="@color/colorCharDiv"></View>

        <TableRow>

            <TextView
                style="@style/TestText"
                android:layout_height="wrap_content"
                android:text="Component:"/>

            <TextView
                android:id="@+id/component"
                style="@style/TestText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
        </TableRow>

        <View android:layout_height="2dp" android:background="@color/colorCharDiv"></View>

        <TableRow>

            <TextView
                style="@style/TestText"
                android:layout_height="wrap_content"
                android:text="Meaning:"/>

            <TextView
                android:id="@+id/meaning"
                style="@style/TestText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试，这是英文解释"/>
        </TableRow>

        <View android:layout_height="2dp" android:background="@color/colorCharDiv"></View>

        <TableRow>

            <TextView
                style="@style/TestText"
                android:layout_height="wrap_content"
                android:text="Words:"/>

            <LinearLayout
                android:id="@+id/words"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>

        </TableRow>

        <View android:layout_height="2dp" android:background="@color/colorCharDiv"></View>

        <TableRow>

            <TextView
                style="@style/TestText"
                android:layout_height="wrap_content"
                android:text="Sentence:"/>

            <TextView
                android:id="@+id/char_sentence"
                style="@style/TestText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="测试，这是例句"/>
        </TableRow>

    </TableLayout>

</LinearLayout>