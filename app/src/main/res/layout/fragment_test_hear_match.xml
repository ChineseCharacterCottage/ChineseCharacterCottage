<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorCharBG"
              android:paddingStart="25dp"
              android:paddingEnd="25dp"
              android:paddingTop="25dp"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Hear Match"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <Button
            android:layout_marginEnd="50dp"
            android:layout_gravity="end"
            android:background="@drawable/horn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/pronounce"/>
        <TextView
            android:layout_gravity="end"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="Again"
            android:gravity="center"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_picture_1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/test_image_height"
                android:src="@drawable/imagenotfound"/>

            <TextView
                android:text="A"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_picture_2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/test_image_height"
                android:src="@drawable/imagenotfound"/>

            <TextView
                android:text="B"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_picture_3"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/test_image_height"
                android:src="@drawable/imagenotfound"/>

            <TextView
                android:text="C"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_picture_4"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/test_image_height"
                android:src="@drawable/imagenotfound"/>

            <TextView
                android:text="D"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

    <RadioGroup
        android:id="@+id/answer_chose"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:checked="false"
            android:text="A"/>

        <RadioButton
            android:id="@+id/radio_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="B"/>

        <RadioButton
            android:id="@+id/radio_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="C"/>

        <RadioButton
            android:id="@+id/radio_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="D"/>
    </RadioGroup>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bt_submit"
            style="@style/NextButton"
            android:text="@string/button_test_submit"/>

        <Button
            android:id="@+id/bt_next"
            style="@style/NextButton"
            android:text="@string/next_test"/>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/layout_error_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/test_err_msg"/>

        <TextView
            android:id="@+id/tv_error_msg"
            style="@style/TestErrorMsgText"/>
    </LinearLayout>

    <Button
        android:id="@+id/bt_show_character"
        style="@style/NextButton"
        android:text="@string/test_show_char"/>

    <Button
        android:id="@+id/mark"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="end"
        android:background="@drawable/star"/>

</LinearLayout>